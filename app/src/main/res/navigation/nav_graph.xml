<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.doseyenc.flownote.presentation.ui.tasklist.TaskListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_task_list">

        <action
            android:id="@+id/action_taskListFragment_to_taskAddEditFragment"
            app:destination="@id/taskAddEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/taskAddEditFragment"
        android:name="com.doseyenc.flownote.presentation.ui.taskaddedit.TaskAddEditFragment"
        android:label="@string/add_task"
        tools:layout="@layout/fragment_task_add_edit">

        <argument
            android:name="taskId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

</navigation>

